<?xml version="1.0" encoding="utf-8"?><!--我的页面的菜单列表的item-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:paddingBottom="20dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_outpatient"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:src="@drawable/hosipital" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="深圳市南山区医疗集团总部龙瑞佳园社区健康服务中心"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="60dp"
            android:text="门诊地址：奥克兰的煎熬了打卡机德拉克斯就打卢克的奥兰多卡的老咔叽狄拉克的骄傲拉开圣诞节"
            android:textColor="#9d9d9d"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"

                android:text="联系电话：13123123123"
                android:textColor="#9d9d9d"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="距离：6.9km"
                android:textColor="#9d9d9d"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>