<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--设置渐变-->
    <gradient
        android:startColor="#1adaab"
        android:endColor="#0bb6b0"
        android:angle="0"/>
    <!--angle控制渐变的方向-->
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="50dp" />
</shape>
